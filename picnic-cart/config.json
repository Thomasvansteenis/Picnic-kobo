{
  "name": "Picnic Shopping Cart",
  "version": "4.0.6",
  "slug": "picnic-cart",
  "description": "Full-featured Picnic grocery shopping webapp with order analytics, recipe parsing, and recurring lists. Includes e-reader optimized mode for Kobo devices. Uses Home Assistant MariaDB addon for persistence.",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "ports": {
    "5000/tcp": 5000
  },
  "ports_description": {
    "5000/tcp": "Web interface"
  },
  "options": {
    "flask_secret_key": "change-this-to-a-random-secret-key-minimum-32-characters-long",
    "mcp_server_url": "http://localhost:3000",
    "db_host": "",
    "db_port": 3306,
    "db_name": "picnic",
    "db_user": "",
    "db_password": "",
    "jwt_secret": "",
    "jwt_expiry_hours": 24,
    "default_ui_mode": "full"
  },
  "schema": {
    "flask_secret_key": "str",
    "mcp_server_url": "url",
    "db_host": "str?",
    "db_port": "int?",
    "db_name": "str?",
    "db_user": "str?",
    "db_password": "password?",
    "jwt_secret": "str?",
    "jwt_expiry_hours": "int?",
    "default_ui_mode": "list(full|legacy)?"
  },
  "url": "https://github.com/Thomasvansteenis/Picnic-kobo",
  "webui": "http://[HOST]:[PORT:5000]",
  "panel_icon": "mdi:cart"
}
