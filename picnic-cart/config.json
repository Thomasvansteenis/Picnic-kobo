{
  "name": "Picnic Shopping Cart",
  "version": "3.0.0",
  "slug": "picnic-cart",
  "description": "Manage your Picnic grocery shopping cart from your Kobo e-reader or any browser. Uses Picnic MCP Server for API communication.",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "ports": {
    "5000/tcp": 5000
  },
  "ports_description": {
    "5000/tcp": "Web interface"
  },
  "options": {
    "flask_secret_key": "change-this-to-a-random-secret-key-minimum-32-characters-long",
    "mcp_server_url": "http://localhost:3000"
  },
  "schema": {
    "flask_secret_key": "str",
    "mcp_server_url": "url"
  },
  "url": "https://github.com/Thomasvansteenis/Picnic-kobo",
